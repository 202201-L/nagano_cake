<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <a href="/"><span>ながのcake</span></a>
      <div>
        <ul>
        <% if admin_signed_in? %>
          <li>
            <%= link_to '商品一覧', admin_products_path %>
          </li>
          <li>
            <%= link_to '会員一覧', admin_end_users_path %>
          </li>
          <li>
            <%= link_to '注文履歴一覧', admin_orders_path %>
          </li>
          <li>
            <%= link_to 'ジャンル一覧', admin_genres_path %>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
          </li>
        <% else %>
          <ul>
          <% if end_user_signed_in? %>
            <li>
              <%= link_to 'マイページ', end_user_path(current_user) %>
            </li>
            <li>
              <%= link_to '商品一覧', products_path %>
            </li>
            <li>
              <%= link_to 'カート', cart_items_path %>
            </li>
            <li>
              <%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to 'About', homes_about_path %>
            </li>
            <li>
              <%= link_to '商品一覧', products_path %>
            </li>
            <li>
              <%= link_to '新規登録', new_end_user_registration_path %>
            </li>
            <li>
              <%= link_to 'ログイン', new_end_user_session_path %>
            </li>
          <% end %>
          </ul>
        <% end %>
        </ul>

      </div>
    </header>
    <%= yield %>
  </body>
</html>
