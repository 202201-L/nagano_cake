<h3>ショッピングカート</h3>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.product.get_product_image, size: "40x40" %>
        <%= cart_item.product.name %>
      </td>
      <td><%= cart_item.product.non_tax_price %></td>
      <td>
        <%= form_with model: @cart_item, method: :patch do |f| %>
          <%= f.select :amount,(1..10).to_a %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>



