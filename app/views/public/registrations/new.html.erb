<div class="container">
  <div class="row">
    <h2 class="col-md-12 offset-1 p-1">
      <strong>新規会員登録</strong>
    </h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <%= flash[:notice]%>
    <div class="form-group row">
      <%= f.label :name, '名前', class: "col-md-3" %>
        <%= f.text_field :last_name, placeholder: "性", class: "form-control col-md-3 offset-1" %>
        <%= f.text_field :first_name, placeholder: "名", class: "form-control col-md-3 ml-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :name, 'フリガナ', class: "col-md-3" %>
        <%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control col-md-3 offset-1" %>
        <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control col-md-3 ml-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-md-3" %>
      <%= f.email_field :email, autocomsplete: "email", class: "form-control col-md-3 offset-1" %>
    </div>
     <div class="form-group row">
      <%= f.label :post_code, '郵便番号', class: "col-md-3" %>
      <%= f.text_field :post_code, class: "form-control col-md-3 offset-1" %>
    </div>
     <div class="form-group row">
      <%= f.label :address, '住所', class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control col-md-8 offset-1" %>
    </div>
    <div class="form-group row">
      <%= f.label :tel, '電話番号(ハイフンなし)', class: "col-md-3" %>
      <%= f.text_field :tel, class: "form-control col-md-3 offset-1" %>
    </div>
    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-3 offset-1" %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, 'パスワード(確認用)', class: "col-md-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-3 offset-1" %>
    </div>
    <%= f.submit "新規登録", class: " btn btn-success w-25 col-md-4 offset-4" %>
  <% end %>
  <h5 class="col-4 ml-2 p-2">
    <strong>既に登録済みの方</strong>
  </h5>
  <div class="col-md-4 offset-1">
    <%= link_to 'こちら', new_end_user_session_path %>  からログインしてください。
  </div>
</div>
