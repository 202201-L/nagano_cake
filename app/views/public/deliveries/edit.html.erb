<div class="container">
  <div class="row m-3">
    <h3 class="text-center col-md-2 offset-1">
      <strong>配送先編集</strong>
    </h3>
  </div>
  <%= form_with model: @delivery, url: delivery_path(@delivery), method: :patch do |f| %>
    <% if @delivery.errors.any? %>
      <%= @delivery.errors.count %>error
      <ul>
        <% @delivery.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group row">
      <%= f.label :post_code, '郵便番号(ハイフンなし)', class: "col-md-3" %>
      <%= f.text_field :post_code, class: "form-control col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, '住所', class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control col-md-6" %>
    </div>
    <div class="form-group row pb-3">
      <%= f.label :address_name, '宛名', class: "col-md-3" %>
      <%= f.text_field :address_name, class: "form-control col-md-3" %>
      <div class="text-right col-md-5">
        <%= f.submit "変更内容を保存", class: "btn btn-success col-md-4" %>
      </div>
    </div>
  <% end %>
</div>


