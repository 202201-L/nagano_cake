<h2>配送先一覧/追加</h2>
<%= form_with model: @delivery, url: deliveries_path, method: :post do |f| %>
  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :post_code %><br>
  <label>住所</label>
  <%= f.text_field :address %><br>
  <label>宛名</label>
  <%= f.text_field :address_name %><br>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
    <tr>
      <td><%= delivery.post_code %></td>
      <td><%= delivery.address %></td>
      <td><%= delivery.address_name %></td>
      <td><%= link_to '編集する', edit_delivery_path(delivery.id) %><%= link_to '削除する', delivery_path(delivery.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
