<div class="container mt-5 mb-5">
  <div class="row">
    <h3 class="col-md-3 offset-1">
      <strong>配送先登録/一覧</strong>
    </h3>
  </div>
  <%= form_with model: @delivery, url: deliveries_path, method: :post do |f| %>
    <% if @delivery.errors.any? %>
      <%= @delivery.errors.count %>error
      <ul>
        <% @delivery.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group row mt-2">
      <%= f.label :post_code, '郵便番号(ハイフンなし)', class: "col-md-3" %>
      <%= f.text_field :post_code, class: "form-control col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, '住所', class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control col-md-7" %>
    </div>
    <div class="form-group row pb-4">
      <%= f.label :address_name, '宛名', class: "col-md-3" %>
      <%= f.text_field :address_name, class: "form-control col-md-3" %>
      <div class="col-md-6 text-right">
        <%= f.submit "新規登録", class: "btn btn-success w-25" %>
      </div>
    </div>
  <% end %>
  <div class="col-md-8">
    <table class="table table-bordered p-3">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.post_code %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.address_name %></td>
          <td>
            <%= link_to '編集する', edit_delivery_path(delivery.id), class: "btn btn-success m-2" %>
            <%= link_to '削除する', delivery_path(delivery.id), method: :delete, class: "btn btn-danger ml-1" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>