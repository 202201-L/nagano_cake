
<h3>注文履歴一覧</h3>

<table border="1" width="1000">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
      <td><%= order.address %></td>
      <td><%= order.total_price %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to "注文詳細", order_path(order) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @orders %>