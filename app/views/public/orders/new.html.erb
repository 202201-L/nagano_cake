<h3>注文情報入力</h3>
<%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
<p>支払い方法</p>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
<p>お届け先</p>
<%= f.radio_button :address_number, 1 %>
<%= f.label :address_number_1, "ご自身の住所" %><br>
<%= current_end_user.address %><br>

<%= f.radio_button :address_number, 2 %>
<%= f.label :address_number_2, "登録先の住所" %><br>
<%= f.collection_select :delivery_id, Delivery.all, :id, :full_address %><br>

<%= f.radio_button :address_number, 3 %>
<%= f.label :address_number_2, "新しいお届け先" %><br>

<%= f.label :post_code, "郵便番号" %>
<%= f.text_field :post_code %><br>

<%= f.label :address_name, "宛名" %>
<%= f.text_field :address_name %><br>

<%= f.label :address, "住所" %>
<%= f.text_field :address %><br>


<p><%= f.submit "確認画面へ進む" %></p>
<% end %>