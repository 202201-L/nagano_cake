<div class="container">
  <div class="row p-3">
    <h3 class="col-md-4 text-right">
      <strong>注文履歴詳細</strong>
    </h3>
  </div>
  <div class="row">
    <p class="col-md-3">
      <strong>注文情報</strong>
    </p>
    <p class="col-md-3 offset-3">
      <strong>請求情報</strong>
    </p>
  </div>
  <div class="row">
      <table class="table-bordered col-md-6">
        <tr>
          <td class="bg-light">注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td class="bg-light">配送先</td>
          <td>
            〒<%= @order.post_code %><br>
            <%= @order.address %>
          </td>
        </tr>
        <tr>
          <td class="bg-light">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td class="bg-light">注文ステータス</td>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
      <table class="table-bordered col-md-3 ml-3">
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @total%></td>
          </tr>
            <td class="bg-light">配送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td class="bg-light">ご請求額</td>
            <td><%= @order.postage + @total %></td>
          </tr>
      </table>
  </div>
  <div class="row mt-3">
    <p>
      <strong>注文内容</strong>
    </p>
  </div>
  <div class="row mb-5">
    <table class="table-bordered col-md-8">
      <thead>
        <tr class="bg-light">
          <td class="col-md-4">商品</td>
          <td class="col-md-2">単価(税込)</td>
          <td class="col-md-1">個数</td>
          <td class="col-md-1">小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order_detail.each do |order_detail| %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= order_detail.intax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.intax_price * order_detail.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>