<div class="container">
  <div class="row">
    <div class="col-md-10 m-3">
      <h3>会員情報編集</h3>
      <% if @end_user.errors.any? %>
        <%= @end_user.errors.count %>error
        <ul>
          <% @end_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <%= form_with model: @end_user,url: end_user_path(@end_user.id), local:true do |f| %>
    <div class="form-group row">
      <%= f.label :name, '氏名', class: "col-md-3" %>
      <%= f.text_field :last_name, placeholder: "性", class: "form-control col-md-3" %>
      <%= f.text_field :first_name, placeholder: "名", class: "form-control col-md-3 ml-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :name, 'フリガナ', class: "col-md-3" %>
      <%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control col-md-3" %>
      <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control col-md-3 ml-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :post_code, '郵便番号', class: "col-md-3" %>
       <%= f.text_field :post_code, placeholder: "〒", class: "form-control col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, '住所', class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control col-md-6" %>
    </div>
    <div class="form-group row">
      <%= f.label :tel, '電話番号', class: "col-md-3" %>
      <%= f.text_field :tel, class: "form-control col-md-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-md-3" %>
      <%= f.text_field :email, class: "form-control col-md-3" %>
    </div>
    <div class="form-group row mr-5">
      <div class="col-md-3 offset-3">
        <%= f.submit '編集内容を保存する', class: 'btn btn-success mr-2' %>
      </div>
      <div class="col-md-5 offset-1">
        <%= link_to '退会する', confirm_unsubscribe_path(@end_user), class: "btn btn-danger w-25" %>
      </div>
    </div>
  <% end %>
</div>