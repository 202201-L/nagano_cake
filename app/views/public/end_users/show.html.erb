<div class="container mt-4 mb-4">
  <div class="row">
    <h3 class="mb-3">マイページ</h3>
  </div>
<div class="row">
  <h4>登録情報</h4>
  <%= link_to '編集する', edit_end_user_path(@end_user), class: "btn btn-success btn-sm ml-5"%>
</div>

<table class="table table-bordered mt-4 col-md-8">
    <tr>
      <td class="bg-light">氏名</td>
      <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
    </tr>
    <tr>
      <td class="bg-light">カナ</td>
      <td><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></td>
    </tr>
    <tr>
      <td class="bg-light">郵便番号</td>
      <td><%= @end_user.post_code %></td>
    </tr>
    <tr>
      <td class="bg-light">住所</td>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <td class="bg-light">電話番号</td>
      <td><%= @end_user.tel %></td>
    </tr>
    <tr>
      <td class="bg-light">メールアドレス</td>
      <td><%= @end_user.email %></td>
    </tr>
  </table>

  <table class="table table-borderless col-md-3">
    <tr>
      <th>配送先</th>
      <td><%= link_to '一覧を見る', deliveries_path, class: "btn btn-primary" %></td>
    </tr>
    <tr>
      <th>注文履歴</th>
      <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
    </tr>
  </table>
</div>