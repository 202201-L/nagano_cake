<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-2">
      <%= render 'admin/genres/index', genres: @genres %>
    </div>
    <div class="col-md-9">
      <h2 class="mb-3">商品一覧 <small>(全<%= @product_all.count %>件)</small></h2>
        <div class="row">
          <%  @products.each do |product| %>
          <div class="col-md-3 mt-3">
            <%= link_to product_path(product) do %>
              <%= image_tag product.get_product_image, size: "200x130" %>
            <% end %>
            <p class="mt-3"><strong><%= product.name %></strong></p>
            <p><strong>¥<%= product.non_tax_price.to_s(:delimited) %></strong></p>
          </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= paginate @products %>
        </div>
    </div>
  </div>
</div>