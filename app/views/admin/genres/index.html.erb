<div class="container">
  <h3 class="mt-4 mb-5">ジャンル一覧・追加</h3>
  <div class=" row">

    <table class="table">
      <row>
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <small class="mr-5"><%= f.label :ジャンル名 %></small>
          <%= f.text_field :name, class:"mr-5" %>
          <%= f.submit "新規登録", class:"btn btn-success"%>
        <% end %>
      </row>
    </table>

    <div class="col-md-4 mt-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>