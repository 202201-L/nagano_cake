<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-3">
    <h3>会員一覧</h3><br>
    </div>

     <table class='table'>
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td>
              <%= link_to admin_end_user_path(end_user.id) do %>
                <span class="text-dark"><%= end_user.last_name %><%= end_user.first_name %></span>
              <% end %>
            </td>
            <td><%= end_user.email %></td>
            <% if end_user.is_delete %>
            <td class = "text-secondary"><strong>退会中</strong></td>
            <% else %>
            <td class ="text-success"><strong>有効</strong></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @end_users %>
  </div>
</div>