<div class="container">
  <div class="row">
    <div class="col-md-10 m-3">
      <h3><%= @end_user.last_name %><%= @end_user.first_name %>さんの会員情報編集</h3>
      <%= form_with model: @end_user,url: admin_end_user_path(@end_user.id), local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @end_user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, class: "form-control" %></td>
          <td><%= f.text_field :first_name, class: "form-control" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
          <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :post_code, class: "form-control" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, class: "form-control" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :tel, class: "form-control" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, class: "form-control" %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_delete, :false %>
            <%= f.label :is_delete, "有効" %>
            <%= f.radio_button :is_delete, :true, class:"ml-3" %>
            <%= f.label :is_delete, "退会" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit '編集内容を保存する',class: 'btn btn-success' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>