<div class="container">
    <h3 class="mt-4">会員詳細</h3>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-borderless">
                <tr>
                    <th>会員ID</th>
                    <td><%= @end_user.id %></td>
                </tr>
                <tr>
                    <th>氏名</th>
                    <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @end_user.post_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @end_user.address %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @end_user.tel %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @end_user.email %></td>
                </tr>
                <tr>
                    <th>ステータス</th>
                    <td><%= @end_user.is_delete ? '退会' : '有効' %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        <%= link_to '編集する', edit_admin_end_user_path(@end_user), class:"btn btn-success btn-sm mr-5"%>
                        <%= link_to '注文履歴一覧をみる', admin_orders_path(@end_user), class:"btn btn-primary btn-sm"%>
                    </td>
                </tr>
            </table>
        </div>

    </div>
</div>
