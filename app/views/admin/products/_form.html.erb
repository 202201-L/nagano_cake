<%= form_with model: product, url:'/products' do |f| %>

  <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :product_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.select :genre, [['ケーキ',1], ['焼き菓子',2], ['プリン',3], ['キャンディー',4]] %>
  </div>

  <div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :non_tax_price %>円
  </div>

  <div class="form-group">
    <%= f.label :販売ステータス %>
  </div>

  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>

<% end %>