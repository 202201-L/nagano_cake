<%= form_with model: product, url: admin_products_path, method: :post do |f| %>

  <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :product_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :body %>
  </div>


  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :non_tax_price %>円
  </div>

  <div class="form-group">
    <%= f.label :販売ステータス %>
    <% if @product.sale_status %>
      <%= link_to '販売停止中', new_admin_product_path(product: {sale_status: false}), method: :put %>
    <% else %>
      <%= link_to '販売中', new_admin_product_path(product: {sale_status: true}), method: :put %>
    <% end %>
  </div>


  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>