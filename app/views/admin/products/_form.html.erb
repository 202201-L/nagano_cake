<%= form_with model: product, url: admin_products_path do |f| %>

  <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :product_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :body %>
  </div>


  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :non_tax_price %>円
  </div>

  <div class="form-group">
    <%= f.label :販売ステータス %>
    <%= f.radio_button :sale_status, :false %>
    <%= f.label :sale_status, "販売中" %>
    <%= f.radio_button :sale_status, :true %>
    <%= f.label :sale_status, "販売停止中" %>
  </div>


  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>