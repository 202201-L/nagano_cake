<div class="container mt-5 mb-5">
  <h3>商品詳細</h3>
  <div class="d-flex mt-5">
    <%= image_tag @product.get_product_image, size: "350x250" %>

    <table class="col-md-4 offset-1">
      <tr>
        <td>商品名</td>
        <td><%= @product.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @product.body %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @product.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td><%= @product.in_tax_price.to_s(:delimited) %> (<%= @product.non_tax_price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
          <% if @product.sale_status %>
            <td class="text-secondary"><strong>販売停止中</strong></td>
          <% else %>
            <td class="text-success"><strong>販売中</strong></td>
          <% end %>
      </tr>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= link_to '編集する', edit_admin_product_path(@product), class:"btn btn-success" %>
  </div>
</div>
