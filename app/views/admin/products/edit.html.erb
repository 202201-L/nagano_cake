<div class="container">
  <h3 class="mt-4">商品編集</h3>
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @product, url: admin_product_path(@product) do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :product_image, accept: "image/*" %> </td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :body, class:"form-control form-controll-lg" %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :non_tax_price, class:"form-control" %>円</td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td>
            <%= f.radio_button :sale_status, :false %>
            <%= f.label :sale_status, "販売中" %>
            <%= f.radio_button :sale_status, :true %>
            <%= f.label :sale_status, "販売停止中" %>
          </td>
        </tr>
      </table>
      <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
