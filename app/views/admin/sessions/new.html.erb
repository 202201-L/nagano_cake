<div class= "container">
  <h3 class="mt-4">管理者ログイン</h3>
  <div class="row d-flex justify-content-center">
    <table class="table table-borderless" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <tr>
       <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
      <td><%= f.label :パスワード %></td>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      <tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class:"btn btn-primary btn-lg"%></td>
      </tr>
      </table>
    <% end %>

<%= render "admin/shared/links" %>
  </div>
</div>