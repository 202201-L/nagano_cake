<div class= "container">
  <div class="row">
    <h3 class="col-md-12 p-3">
      <strong>管理者ログイン</strong>
    </h3>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-md-2 offset-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6" %>
    </div>
     <div class="form-group row">
      <%= f.label :パスワード, class: "col-md-2 offset-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6" %>
    </div>
    <div>

    </div>
    <div class="m-3">
      <%= f.submit "ログイン", class:"btn btn-primary w-25 col-md-2 offset-5"%>
    </div>
    <% end %>
    <%= render "admin/shared/links" %>
  </div>
</div>